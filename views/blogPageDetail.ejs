    <style>
      .blog {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 1rem;
        gap: 10px;
      }
      .blog-body {
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 10px;
      }
      .blog > img {
        width: 40%;
      }
      .heading {
        padding: 10px;
        background-color: rgb(83, 168, 248);
        color: white;
      }
      .content {
        padding: 10px;
        background-color: aliceblue;
        min-height: 200px;
      }
      @media only screen and (max-width: 600px) {
        .blog > img {
          width: 100%;
        }
      }
    </style>
    <section class="blog">
      <img src="/<%= blog.image %>" alt="<%= blog.title %>" />
      <div class="blog-body">
        <div class="heading">
          <h3><%= blog.title %></h3>
          <p>Author:<%= blog.author %></p>
        </div>
        <div class="content">
          <h4>Content</h4>
          <div id="editor"></div>
          <input
            type="hidden"
            id="contentDelta"
            name="contentDelta"
            value="<%= blog.contentDelta %>"
          />
        </div>
      </div>
    </section>
