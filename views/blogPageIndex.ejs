</nav>
    <div class="main-content">
        <!-- Blog section -->
        <section class="blogs-container">
            <!-- Blog Item -->
            <% blogs.forEach(function(blog) { %>
                <div class="blogs-item">
                    <div class="blog-image">
                        <img src="/<%= blog.image %>" alt="<%= blog.title %>">
                    </div>
                    <p class="description">
                        <%= blog.description %>
                    </p>
                    <p class="title">
                        <%= blog.title %>
                    </p>
                    <div class="content">
                        <div class="blog-details">
                            <p class="tag">Category: <span>Tech</span></p>
                            <p><%= blog.date %></p>
                        </div>
                        <div class="about-author">
                            <img src="images/avatar1.png" alt="<%= blog.author %>">
                            <p>By - <span><%= blog.author %></span></p>
                        </div>
                        <a href="/blog/<%= blog._id %>" class="read-more">Read More</a>
                    </div>
                </div>
            <% }); %>

         
        </section>

        <!-- Recent Articles -->
        <aside class="recent-articles">
            <h4>Recent Articles</h4>
            <% blogs.slice(0, 5).forEach(function(blog) { %>
                <div class="recent-item">
                    <p class="recent-title"><a href="/blog/<%= blog._id %>" target="_blank"><%= blog.title %></a></p>
                    <p class="recent-date"><%= blog.date %></p>
                </div>
            <% }); %>
            <!-- <a href="all-articles.html" class="view-all">View All</a> -->
