  <section class="job-listings">
      <h3>Current Openings</h3>
      <div class="job-container">
        <% jobs.forEach(function(job, index) { %>
          <div class="job">
              <% if (index % 2 === 0) { %>
                  <img src="images/avatar1.png" alt="Software Engineer Image">
              <% } else { %>
                  <img src="images/avatar2.png" alt="Data Scientist Image">
              <% } %>
              <h4><%= job.title %></h4>
              <p><%= job.description %></p>
              <p>Location: <%= job.location %></p>
              <a href="<%= job.document %>" target="_blank" class="apply-btn">Details</a>
              <a href="/career/apply/<%= job._id %>" class="apply-btn">Apply Now</a>
          </div>
      <% }); %>
          
          <!-- Add more job cards here as needed -->
