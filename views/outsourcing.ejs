      const groupedOutsourcing = outsourcing.reduce((acc, service) => {
        acc[service.type] = acc[service.type] || [];
        acc[service.type].push(service);
        return acc;
      }, {}); 
    %>
    <% Object.keys(groupedOutsourcing).forEach(type => { %>
      <h2><%= type %> Services</h2>
      <div class="grid">
        <% groupedOutsourcing[type].forEach(function(service) { %>
          <div class="card">
            <img src="/<%= service.thumbnail %>" alt="<%= service.name %>">
            <h3><%= service.name %></h3>
            <p><%= service.shortDescription %> <a href="/outsourcing/<%= service._id %>">Read More</a></p>
