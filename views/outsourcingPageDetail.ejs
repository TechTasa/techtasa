    <style>
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            background: #121212;
            color: #e0e0e0;
        }

        .main-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        /* Hero Section */
        .hero {
            background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('/img/hero-bg.jpg');
            background-size: cover;
            background-position: center;
            padding: 80px 20px;
            text-align: center;
            margin-bottom: 40px;
        }

        .hero h1 {
            font-size: 2.5rem;
            margin-bottom: 20px;
            color: #fff;
        }

        .hero p {
            font-size: 1.2rem;
            max-width: 800px;
            margin: 0 auto;
            color: #fff;
        }

        .type-badge {
            display: inline-block;
            background: #dd0031;
            color: #fff;
            padding: 8px 16px;
            border-radius: 20px;
            margin-top: 20px;
            font-size: 0.9rem;
        }

        /* Content Grid */
        .content-grid {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 30px;
            margin-top: 40px;
        }

        /* Media Section */
        .media-section {
            background: #1e1e1e;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 30px;
        }

        .media-section h2 {
            font-size: 1.8rem;
            margin-bottom: 20px;
            color: #fff;
            border-bottom: 2px solid #dd0031;
            padding-bottom: 10px;
        }

        .thumbnail-img {
            width: 100%;
            max-height: 400px;
            object-fit: contain;
            border-radius: 8px;
            margin-bottom: 20px;
            background: #2c2c2c;
        }

        .media-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
            gap: 15px;
            margin-top: 20px;
        }

        .media-item {
            aspect-ratio: 16/9;
            background: #2c2c2c;
            border-radius: 8px;
            overflow: hidden;
        }

        .media-item img, 
        .media-item video {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }

        /* Info Sections */
        .info-section {
            background: #1e1e1e;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
        }

        .info-section h2 {
            font-size: 1.5rem;
            margin-bottom: 20px;
            color: #fff;
            border-bottom: 2px solid #dd0031;
            padding-bottom: 10px;
        }

        .info-list {
            list-style: none;
            padding: 0;
        }

        .info-list li {
            background: #2c2c2c;
            margin: 10px 0;
            padding: 15px;
            border-radius: 8px;
            transition: background-color 0.3s;
        }

        .info-list li:hover {
            background: #3a3a3a;
        }

        /* Documents Section */
        .document-list {
            list-style: none;
            padding: 0;
        }

        .document-list li {
            background: #2c2c2c;
            margin: 10px 0;
            padding: 15px;
            border-radius: 8px;
        }

        .document-list a {
            color: #fff;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .document-list i {
            color: #dd0031;
        }

        /* Instructor Section */
        .instructor-section {
            text-align: center;
            padding: 20px;
        }

        .instructor-img {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            margin-bottom: 15px;
            object-fit: cover;
        }

        .instructor-name {
            font-size: 1.3rem;
            margin: 10px 0;
            color: #fff;
        }

        .instructor-bio {
            color: #e0e0e0;
            line-height: 1.6;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .content-grid {
                grid-template-columns: 1fr;
            }

            .media-grid {
                grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            }
        }

        /* Modal Styles */
        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.9);
            backdrop-filter: blur(5px);
        }

        .modal-content {
            margin: auto;
            display: block;
            max-width: 90%;
            max-height: 90vh;
            position: relative;
            top: 50%;
            transform: translateY(-50%);
            object-fit: contain;
        }

        .close-modal {
            position: absolute;
            right: 25px;
            top: 25px;
            color: #fff;
            font-size: 35px;
            cursor: pointer;
            z-index: 1001;
            width: 40px;
            height: 40px;
            background: rgba(0, 0, 0, 0.5);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: background-color 0.3s;
        }

        .close-modal:hover {
            background-color: rgba(255, 0, 0, 0.5);
        }

        .media-item img {
            cursor: pointer;
            transition: transform 0.3s ease;
        }

        .media-item img:hover {
            transform: scale(1.05);
        }

        @keyframes zoomIn {
            from {
                opacity: 0;
                transform: scale(0.3) translateY(-50%);
            }
            to {
                opacity: 1;
                transform: scale(1) translateY(-50%);
            }
        }

        .modal-content {
            animation: zoomIn 0.3s ease-out;
        }
    </style>
</head>
