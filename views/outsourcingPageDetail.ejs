    </div>

    <div class="main-content">
        <div class="content-grid">
            <!-- Left Column -->
            <div class="main-column">
                <div class="media-section">
                    <h2>Service Gallery</h2>
                    <% if (outsourcing.thumbnail) { %>
                        <img src="/<%= outsourcing.thumbnail %>" alt="<%= outsourcing.name %>" class="thumbnail-img">
                    <% } %>

                    <% if (outsourcing.images && outsourcing.images.length > 0) { %>
                        <h3>Images</h3>
                        <div class="media-grid">
                            <% outsourcing.images.forEach(function(image) { %>
