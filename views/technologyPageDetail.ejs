    <style>
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            background: #121212;
            color: #e0e0e0;
            overflow-x: hidden;
        }

        header {
            background: #1f1f1f;
            color: #e0e0e0;
            padding: 20px;
            text-align: center;
            position: relative;
            z-index: 10;
            animation: fadeIn 2s ease-out;
        }

        header h1 {
            margin: 0;
            font-size: 2.5rem;
        }

        .hero {
            position: relative;
            background: url('/img/angular-background.jpg') no-repeat center center/cover;
            height: 500px;
            color: #e0e0e0;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            overflow: hidden;
            animation: slideIn 2s ease-out;
        }

        .hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.7);
            z-index: 1;
        }

        .hero h2 {
            font-size: 3rem;
            margin: 0;
            z-index: 2;
            animation: fadeInUp 1.5s ease-out;
        }

        .hero p {
            font-size: 1.25rem;
            margin: 20px 0;
            z-index: 2;
            animation: fadeInUp 2s ease-out;
        }

        .hero .cta-button {
            background: #34a853;
            color: #fff;
            padding: 15px 30px;
            border: none;
            border-radius: 5px;
            font-size: 1rem;
            text-decoration: none;
            margin-left: 20px;
            margin-top: 20px;
            display: inline-block;
            z-index: 2;
            transition: background 0.3s ease, transform 0.3s ease;
        }

        .hero .cta-button:hover {
            background: #b70029;
            transform: scale(1.1);
        }

        .container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            padding: 20px;
            margin-top: 5rem;
        }

        .section {
            background: #1e1e1e;
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
            padding: 20px;
            position: relative;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .section:hover {
            transform: translateY(-10px);
            box-shadow: 0 0 25px rgba(0, 0, 0, 0.7);
        }

        .section h2 {
            font-size: 2rem;
            margin-bottom: 20px;
            position: relative;
        }

        .section h2::before {
            content: '';
            position: absolute;
            left: 0;
            bottom: -10px;
            width: 50px;
            height: 4px;
            background: #dd0031;
        }

        .course-info, .benefits, .instructor, .testimonials, .register {
            padding: 20px;
            margin: 10px 0;
        }

        .course-info ul, .benefits ul, .testimonials blockquote {
            margin: 0;
            padding: 0;
            font-size: 1rem;
        }

        .course-info ul li, .benefits li {
            background: #2c2c2c;
            margin: 10px 0;
            padding: 10px;
            border-radius: 4px;
        }

        .course-info ul li:hover, .benefits li:hover {
            background: #3a3a3a;
        }

        .instructor img {
            border-radius: 50%;
            width: 120px;
            height: 120px;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .instructor img:hover {
            transform: scale(1.1);
        }

        .testimonials blockquote {
            border-left: 5px solid #dd0031;
            padding: 10px 20px;
            font-style: italic;
            margin-bottom: 10px;
            transition: border-color 0.3s ease;
            background: #2c2c2c;
        }

        .testimonials blockquote:hover {
            border-color: #b70029;
        }

        .register form {
            display: flex;
            flex-direction: column;
        }

        .register input, .register textarea {
            margin-bottom: 10px;
            padding: 10px;
            border: 1px solid #444;
            border-radius: 4px;
            background: #2c2c2c;
            color: #e0e0e0;
            transition: border-color 0.3s ease;
        }

        .register input:focus, .register textarea:focus {
            border-color: #dd0031;
        }

        .register button {
            background: #dd0031;
            color: #fff;
            padding: 15px;
            border: none;
            border-radius: 4px;
            font-size: 1rem;
            transition: background 0.3s ease, transform 0.3s ease;
        }

        .register button:hover {
            background: #b70029;
            transform: scale(1.05);
        }

        footer {
            background: #1f1f1f;
            color: #e0e0e0;
            text-align: center;
            padding: 20px;
        }

        /* Animations */
        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        @keyframes fadeInUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        @keyframes slideIn {
            from { transform: translateY(-100px); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }
    </style>
</head>
